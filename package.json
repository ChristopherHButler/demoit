{
  "name": "demoit",
  "version": "3.7.0",
  "description": "A live coding tool",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krasimir/demoit.git"
  },
  "scripts": {
    "minify-demoit": "uglifyjs -c -m -o ./dist/demoit.js -- ./dist/demoit.js",
    "produce-css": "cat ./src/css/styles.css ./src/css/codemirror.css ./src/css/codemirror_dark.css | uglifycss > ./dist/styles.css",
    "produce-vendor-js": "cat ./src/vendor/split.js ./src/vendor/codemirror.js ./src/vendor/javascript.js ./src/vendor/xml.js ./src/vendor/jsx.js ./src/vendor/mark-selection.js | uglifyjs -c -m -o ./dist/vendor.js",
    "dev": "yarn produce-vendor-js && concurrently \"webpack\" \"cpx ./src/index.html ./dist --watch\" \"cpx ./src/styles.css ./dist --watch\"",
    "release": "yarn produce-vendor-js && webpack --config ./webpack.config.prod.js && cleancss ./src/styles.css -o ./dist/styles.css && cp ./src/index.html ./dist/index.html && yarn minify-demoit && node ./scripts/zipit.js"
  },
  "keywords": [
    "demo",
    "code",
    "live",
    "coding"
  ],
  "author": "Krasimir Tsonev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/krasimir/demoit/issues"
  },
  "homepage": "https://github.com/krasimir/demoit#readme",
  "devDependencies": {
    "@babel/core": "7.1.5",
    "@babel/plugin-transform-runtime": "7.1.0",
    "@babel/preset-env": "7.1.5",
    "@babel/runtime": "7.1.5",
    "babel-loader": "8.0.4",
    "clean-css-cli": "4.2.1",
    "concurrently": "4.0.1",
    "cpx": "1.5.0",
    "uglify-js": "3.4.9",
    "uglifycss": "0.0.29",
    "webpack": "4.25.1",
    "webpack-cli": "3.1.2",
    "zip-folder": "1.0.0"
  }
}
